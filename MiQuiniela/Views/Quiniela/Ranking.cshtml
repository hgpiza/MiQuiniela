@model List<MiQuiniela.Models.RankingView>

@section Header {
    @Html.ActionLink("Inicio", "Rondas", "Quiniela", new { ID_Grupo = Model[0].ID_Grupo, ID_Usuario = ViewBag.ID_Usuario, token = Session["AccessToken"].ToString() }, new { data_icon = "home" })
    <h1>@ViewBag.Title</h1>
}

@{
    ViewBag.Title = "Ranking";
}

<h2>Ranking</h2>
<style>
            .ui-li-twoBubble .ui-li-count
            {
                float: right;
            }
            .ui-li-twoBubble .ui-li-count:nth-child(odd)
            {
                margin-right: 4em;
            }
</style>
<ol data-role="listview" data-inset="true" class="ui-li-twoBubble">
    <li data-role="list-divider">Tabla general</li>
    @foreach (var r in Model)
    { 
        <li>@r.Nickname<span class="ui-li-count">@r.TotalPuntos</span> <span class="ui-li-count">@r.Diferencia</span></li>
    }
    @if (Model.Count() == 0)
    { 
        <li>No hay usuarios</li>
    }
</ol>
